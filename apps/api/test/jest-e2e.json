{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "moduleNameMapper": {
    "src/(.*)": "<rootDir>/$1",
    "^resend$": "<rootDir>/__mocks__/resend.ts"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "testRunner": "jest-circus/runner",
  "silent": false,
  "testTimeout": 60000
}
